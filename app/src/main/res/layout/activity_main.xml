<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pet_normal"
    android:orientation="vertical"
    tools:context="com.example.cootek.feedpet.MainActivity">

    <Button
        android:id="@+id/add_pet_info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/add_pet_press" />

    <ImageView
        android:id="@+id/main_time_together"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/time_together" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="57dp"
        android:text="在一起"
        android:textColor="@color/BLACK"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_time_together"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="60dp"
        android:text="0分"
        android:textColor="@color/BLACK"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/main_sport_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="55dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/sport_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="57dp"
        android:text="运动量"
        android:textColor="@color/BLACK"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_sport_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="70dp"
        android:text="0米"
        android:textColor="@color/BLACK"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/main_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/up_main_press" />


</RelativeLayout>
