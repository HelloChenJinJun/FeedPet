<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/BLUE"
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <ImageView
            android:id="@+id/pet_info_left_button"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left_turn_button"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:text="宠物信息"
            android:textColor="@color/WHITE"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/edit_pet_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:textColor="@color/BLACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:text="昵称："
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/edit_pet_nick"
            android:layout_alignBottom="@+id/edit_pet_nick"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/edit_pet_nick"
            android:textColor="@color/BLACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="昵称"
            android:textSize="20sp"
            android:textColorHint="@color/Grey"/>

        <TextView
            android:id="@+id/textView2"
            android:textColor="@color/BLACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_pet_nick"
            android:layout_marginTop="43dp"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/edit_pet_nick"
            android:layout_toStartOf="@+id/edit_pet_nick"
            android:text="品种：" />

        <EditText
            android:id="@+id/edit_pet_kind"
            android:textColor="@color/BLACK"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_pet_nick"
            android:layout_alignStart="@+id/edit_pet_nick"
            android:layout_below="@+id/edit_pet_nick"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="品种"
            android:textColorHint="@color/Grey"/>

        <TextView
            android:id="@+id/textView3"
            android:textColor="@color/BLACK"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/edit_pet_kind"
            android:layout_marginTop="52dp"
            android:text="年龄：" />

        <EditText
            android:id="@+id/edit_pet_age"
            android:textColor="@color/BLACK"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_pet_kind"
            android:layout_alignStart="@+id/edit_pet_kind"
            android:layout_below="@+id/edit_pet_kind"
            android:layout_marginTop="37dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="年龄"
            android:textColorHint="@color/Grey"/>

        <TextView
            android:id="@+id/textView4"
            android:textColor="@color/BLACK"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/edit_pet_age"
            android:layout_marginTop="49dp"
            android:text="饲养日期：" />

        <EditText
            android:id="@+id/edit_feed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignEnd="@+id/edit_pet_age"
            android:layout_alignRight="@+id/edit_pet_age"
            android:layout_below="@+id/edit_pet_age"
            android:layout_marginTop="38dp"
            android:hint="xxxx-xx-xx"
            android:textColorHint="@color/Grey"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView5"
            android:textColor="@color/BLACK"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_below="@+id/edit_feed_date"
            android:layout_marginTop="36dp"
            android:text="设备ID：" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_provide_device"/>


        <ImageView
            android:id="@+id/provide_pet_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_info_press"
            android:layout_marginBottom="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</LinearLayout>